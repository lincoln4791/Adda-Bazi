<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.UserProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ProfilePicture_UserProfileActivity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:onClick="profilePictureBtnPressed"
        android:src="@drawable/default_profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_userName_userProfileInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:fontFamily="@font/nerko_one_regular"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_ProfilePicture_UserProfileActivity"
        tools:text="@string/userName" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_userProfilrActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_userName_userProfileInfo" />

    <!--    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_logOutAndEditBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_userProfilrActivity">

        </androidx.core.widget.NestedScrollView>-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_userProfileActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_userProfilrActivity" />


    <LinearLayout
        android:id="@+id/ll_logOutAndEditBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/tl_userProfilrActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_ProfilePicture_UserProfileActivity"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_editProfile_userProfileActivity"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal"
            android:onClick="editProfileBtnPressed"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp"
            android:text="@string/edit"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible"
            app:cornerRadius="16dp"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnLogout_profileActivity_ID"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:onClick="btnLogoutClicked"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp"
            android:text="@string/name_btn_logout"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible"
            app:cornerRadius="16dp"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sendFriendReq_userProfileActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tl_userProfilrActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_sendFriendReq_userProfileActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:text="@string/sendFriendRequest"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_acceptFriendReq_userProfileActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tl_userProfilrActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_ProfilePicture_UserProfileActivity"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_acceptFriend_userProfileActivity"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/green"
            android:text="@string/accept"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/btn_rejectFriend_userProfileActivity"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="@string/reject"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cancelFriendReq_userProfileActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tl_userProfilrActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_ProfilePicture_UserProfileActivity"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_cancelFriendRequest_userProfileActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="@string/cancelFriendRequest"
            android:textStyle="bold"
            android:visibility="visible"
            app:cornerRadius="16dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_unfriend_userProfileActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tl_userProfilrActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_ProfilePicture_UserProfileActivity"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <Button
            android:id="@+id/btn_unfriend_userProfileActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/red"
            android:text="@string/unfriend"
            android:textStyle="bold"
            app:cornerRadius="16dp" />

        <Button
            android:id="@+id/btn_sendMessage_userProfileActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/yellow"
            android:text="@string/sendMessage"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="16dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>